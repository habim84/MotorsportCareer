<Window x:Class="MotorsportCareer.Popups.SetCareerNamePopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MotorsportCareer.Popups"
        mc:Ignorable="d"
        Title="Set Career Name" Height="160" Width="400">
    <StackPanel Margin="10">
        <Label x:Name="CareerNameDescLabel" Content="Enter the name of this Career:"/>
        <TextBox x:Name="CareerNameTextBox"></TextBox>
        <Label x:Name="CareerNameErrorLabel" Content="Error: " Foreground="Red" HorizontalContentAlignment="Center" Visibility="Collapsed"/>
        <Button x:Name="CareerNameAcceptButton" Click="CreateCareerButton_Click" HorizontalAlignment="Center" Padding="18,2,18,2" Margin="0,5,0,10">Create</Button>
    </StackPanel>
</Window>
