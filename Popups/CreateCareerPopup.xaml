<Window x:Class="MotorsportCareer.Popups.CreateCareerPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MotorsportCareer.Popups"
        mc:Ignorable="d"
        Title="CreateCareerPopup" Height="300" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="StartCareerButton" Click="OnEditExistingClick" Content="Edit Existing Template" FontSize="22" Grid.Row="0" Grid.Column="0"/>
        <Button x:Name="LoadCareerButton" Click="OnCreateNewClick" Content="Create New Template" FontSize="22" Grid.Row="0" Grid.Column="1"/>
        <Button x:Name="CreateCareerButton" Click="OnCloneExistingClick" Content="Clone Existing Template" FontSize="22" Grid.Row="0" Grid.Column="2"/>
    </Grid>
</Window>
