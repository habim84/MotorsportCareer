        <Button x:Name="SaveCareerButton" Click="OnCreateCareerClick" Content="Save Career" Panel.ZIndex="1" Width="70" Height="25" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" Visibility="Visible"/>
